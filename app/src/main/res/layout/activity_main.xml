<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.catmi.bmobsmstest.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/key_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="key:"/>

        <EditText
            android:id="@+id/text_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入key"
            android:text="1b33d9dc1d68c9331bb4c43c7c9576e7"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/key_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        android:id="@+id/mobile_phone_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="手机号:"/>

        <EditText
            android:id="@+id/text_mobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:text="18929393364"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/mobile_phone_layout">

        <Button
            android:id="@+id/btn_requestSmsCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取验证码"/>

        <EditText
            android:id="@+id/text_smsCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输验证码"/>

        <Button
            android:id="@+id/btn_verifySmsCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交验证码"/>

        <Button
            android:id="@+id/btn_querySmsState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询短信发送状态"/>

        <TextView
            android:id="@+id/text_debug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>
